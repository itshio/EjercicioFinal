<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondo"
    tools:context="com.example.ejerciciofinal.ListviewActivity"
    android:orientation="vertical">

    <LinearLayout
        style="@style/cabecera"
        android:layout_width="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="match_parent"
            android:layout_height="@dimen/d70"
            app:srcCompat="@drawable/brasa2" />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="90dp">

        <TextView
            android:id="@+id/listview_txt_hora"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:text="TextView" />

        <TextView
            android:id="@+id/listview_txt_dia"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="27dp"
            android:layout_marginStart="27dp"
            android:text="TextView" />

        <TextView
            android:id="@+id/listview_txt_nombre"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_alignLeft="@+id/listview_txt_hora"
            android:layout_alignParentBottom="true"
            android:layout_alignStart="@+id/listview_txt_hora"
            android:text="TextView" />
    </RelativeLayout>

    <ListView
        android:id="@+id/List_reservas"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
</LinearLayout>
